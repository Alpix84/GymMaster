<UserControl x:Class="GymMaster.Services.ErrorPopup"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="300">
    <Grid>
        <TextBlock x:Name="ErrorMessageTextBlock" TextWrapping="Wrap" Text="{Binding ErrorMessage}" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <Button x:Name="CloseButton" Content="OK" HorizontalAlignment="Center" Margin="0,20,0,0" VerticalAlignment="Center" Width="75" Click="CloseButton_Click"/>
    </Grid>
</UserControl>